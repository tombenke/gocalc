@startebnf
title micro-language example

constant = 'pi' | phi | 'e';

atom = number | constant | '(', [' '], expression, [' '], ')';

term = atom, [[' '], ('*' | '/'), [' '], atom];

expression = term, [[' '], ('+' | '-'), [' '], term];

number = intNumber | realNumber;

intNumber = [sign], digits;

realNumber = [sign], digits, '.', [digits], [exponent];

sign = '+' | '-';

digits = '/^[0-9]+/';

exponent = ('e' | 'E'), sign, intNumber;

@endebnf
